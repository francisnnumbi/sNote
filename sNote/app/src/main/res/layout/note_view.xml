<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="fill_parent"
	android:orientation="vertical"
	android:background="?attr/colorPrimary"
	android:id="@+id/note_root_layout"
	android:layout_height="fill_parent">

	<android.support.v7.widget.Toolbar
		android:id="@+id/note_toolbar"
		android:layout_alignParentTop="true"
		android:layout_width="match_parent"
		android:layout_height="?attr/actionBarSize"
		android:background="?attr/colorPrimary"/>

	<LinearLayout
		android:id="@+id/nv_l1"
		style="?android:attr/listSeparatorTextViewStyle"
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:layout_below="@+id/note_toolbar"
		android:orientation="vertical">

		<android.support.v7.widget.AppCompatEditText
			android:id="@+id/note_title"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:singleLine="true"
			android:backgroundTint="#ff4400"
			style="?android:attr/listSeparatorTextViewStyle"
			android:hint="@string/header_hint"
			android:textSize="20sp"/>

		<RelativeLayout
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:orientation="horizontal">

			<android.support.v7.widget.AppCompatTextView
				android:id="@+id/note_date"
				android:layout_height="wrap_content"
				android:text="24-01-2017 13:00:00"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:layout_width="wrap_content"
				android:layout_alignParentLeft="true"
				android:layout_toLeftOf="@+id/note_done"
				android:layout_gravity="center_vertical"
				android:textIsSelectable="true"/>

			<android.support.v7.widget.AppCompatCheckBox
				android:id="@+id/note_done"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:text="fait"
				android:layout_marginRight="10dp"
				android:button="@drawable/my_check_box"
				android:layout_alignParentRight="true"/>

		</RelativeLayout>

	</LinearLayout>

	<ScrollView
		android:layout_height="match_parent"
		android:layout_width="match_parent"
		android:id="@+id/sv1"
		android:paddingLeft="5dp"
		android:background="@color/my_editor_text"
		android:layout_below="@+id/nv_l1"
		android:layout_alignParentBottom="true">

		<fnn.smirl.note.util.MemoEditText
			android:scrollHorizontally="true"
			android:id="@+id/note_body"
			android:inputType="textMultiLine"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:gravity="top|left"
			android:textSize="14sp"
			android:background="@android:color/transparent"
			android:hint="@string/body_hint"
			android:minLines="40"
			android:paddingRight="10dp"
			android:paddingTop="2dp"
			android:paddingBottom="2dp"
			android:paddingLeft="5dp"
			/>

	</ScrollView>

</RelativeLayout>

