<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:orientation="vertical"
	android:background="@drawable/rnd_rect"
	android:layout_height="fill_parent">

	<LinearLayout
		android:id="@+id/nv_l1"
		style="?android:attr/listSeparatorTextViewStyle"
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:orientation="vertical">

		<EditText
			android:id="@+id/note_title"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:singleLine="true"
			style="?android:attr/listSeparatorTextViewStyle"
			android:background="@android:color/transparent"
			android:hint="@string/header_hint"
			android:textSize="22sp"/>

		<RelativeLayout
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:orientation="horizontal">

			<TextView
				android:id="@+id/note_date"
				android:layout_height="wrap_content"
				android:text="24-01-2017 13:00:00"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:layout_width="wrap_content"
				android:layout_alignParentLeft="true"
				android:layout_toLeftOf="@+id/note_done"
				android:layout_gravity="center_vertical"
				android:textIsSelectable="true"/>

			<CheckBox
				android:id="@+id/note_done"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:text="fait"
				android:button="@drawable/my_check_box"
				android:layout_alignParentRight="true"/>

		</RelativeLayout>

	</LinearLayout>

	<ScrollView
		android:layout_height="match_parent"
		android:layout_width="match_parent"
		android:id="@+id/sv1"
		android:layout_below="@+id/nv_l1"
		android:layout_alignParentBottom="true">

		<EditText
			android:scrollHorizontally="true"
			android:id="@+id/note_body"
			android:inputType="textMultiLine"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:gravity="top|left"
			android:background="@android:color/transparent"
			android:hint="@string/body_hint"
			android:minLines="1"/>

	</ScrollView>

</RelativeLayout>

